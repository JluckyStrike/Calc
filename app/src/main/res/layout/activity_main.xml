<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_size_height"
        android:background="@color/color_gray"
        android:fontFamily="@font/collegiate"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="@dimen/panel_text_size"
        android:textStyle="bold"></TextView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/grid_margin_top"
        android:columnCount="4"
        android:rowCount="5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_1"
            android:text="@string/num_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_2"
            android:text="@string/num_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_3"
            android:text="@string/num_3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_с"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_textview" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_4"
            android:text="@string/num_4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_5"
            android:text="@string/num_5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_6"
            android:text="@string/num_6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_div"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/div_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_7"
            android:text="@string/num_7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_8"
            android:text="@string/num_8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/num_9"
            android:text="@string/num_9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multy"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multy_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:tag="@string/num_0"
            android:text="@string/num_0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_point"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/dot_button"
            android:text="@string/dot_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equal"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/equal_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_percent"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/percent_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min_button" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/linear_margin_start"
        android:layout_marginTop="@dimen/grid_margin_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Темная тема"
            android:textSize="@dimen/txt_size_theme"></TextView>

        <Switch
            android:id="@+id/switch_app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Switch>

    </LinearLayout>

</LinearLayout>