<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Night">
        <item name="colorPrimary">#3F51B5</item>
        <item name="android:windowBackground">#070C37</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#077ECF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.BlueSky">
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="android:windowBackground">#33C2F5</item>
        <item name="colorPrimaryDark">#077ECF</item>
    </style>

    <style name="Theme"></style>
</resources>